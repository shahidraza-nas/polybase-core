{
  "name": "polycore-cli",
  "version": "1.2.2",
  "description": "Backend boilerplate generator for Node.js + TypeScript with SQL/NoSQL/Hybrid support",
  "type": "module",
  "bin": {
    "polycore": "bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "keywords": [
    "boilerplate",
    "generator",
    "cli",
    "typescript",
    "nodejs",
    "express",
    "backend",
    "api",
    "sql",
    "nosql",
    "hybrid",
    "prisma",
    "sequelize",
    "mongoose",
    "rest-api"
  ],
  "author": "Shahid Raza <shahid@newagesysit.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shahidraza-nas/polybase-core.git"
  },
  "homepage": "https://github.com/shahidraza-nas/polybase-core#readme",
  "bugs": {
    "url": "https://github.com/shahidraza-nas/polybase-core/issues"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "fs-extra": "^11.2.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0",
    "vitest": "^1.0.4"
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
